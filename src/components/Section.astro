---
export interface Props {
	title: string;
  content:string;
}

const { title } = Astro.props;
const {content} = Astro.props;
---


<div class="Section">
  <h1>{title}</h1>
  <p>{content}</p>
</div>

<style>
  .Section {
    display: flex;
    flex-direction: column;
    padding: 10vh 6.8vw;
    align-items: center;
  }
  .Section p{
    text-align: center;
    width: 80%;
    margin-top: 2%;
  }
</style>